# Flask Environment
FLASK_ENV=production

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Request Settings
REQUEST_TIMEOUT=15
MAX_WORKERS=0

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO